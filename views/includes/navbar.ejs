<!-- Include Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Include FontAwesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<nav class="navbar navbar-expand-lg navbar-dark navbar-custom shadow-lg fixed-top p-2 ">
    <div class="container">
        <!-- Brand Logo -->
        <a class="navbar-brand fw-bold d-flex align-items-center" href="/home">
            <i class="fas fa-code me-2"></i> SkillIssu!
        </a>

        <!-- Mobile Toggle Button -->
        <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Links -->
        <div class="collapse navbar-collapse text-center" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/problems">
                        <i class="fas fa-tasks me-1"></i> Problems
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contests/current">
                        <i class="fas fa-trophy me-1"></i> Contests
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/courses">
                        <i class="fas fa-book me-1"></i> Courses
                    </a>
                </li>
                <% if (user) { %>
                    <li class="nav-item">
                        <a class="nav-link text-warning fw-bold" href="/admin">
                            <i class="fas fa-user-shield me-1"></i> Admin
                        </a>
                    </li>
                <% } %>
            </ul>

            <!-- Login/Logout Section -->
            <div class="navbar-nav ms-3">
                <% if (user) { %>
                    <a href="/users/profile">
                        <span class="navbar-text text-light me-3">
                            <i class="fas fa-user-circle"></i> Hello, <%= user.username %>
                        </span>
                    </a>
                    <a class="btn btn-outline-light" href="/users/logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                <% } else { %>
                    <a class="btn btn-outline-light me-2" href="/users/login">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                    <a class="btn btn-primary" href="/users/register">
                        <i class="fas fa-user-plus"></i> Sign Up
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</nav>
