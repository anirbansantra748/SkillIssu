<% layout("/layouts/boilerplate") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= problem.title %></title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* üåô Full Dark Mode Theme */
body {
  background-color: #121212 !important;
  color: #e0e0e0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.container {
  margin-top: 20px;
}

/* üéØ Problem Section */
.problem-section {
  background-color: #1e1e1e;
  padding: 20px;
  border-radius: 10px;
  height: 100vh;
  overflow-y: auto;
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
}

h3, h5 {
  color: #ffffff;
}

.tag{
  font-size: 0.8rem;
  padding: 5px 10px;
  border-radius: 5px;
  /* text color */
  color: #000000
}

/* üåü Button Styles */
.btn {
  margin-right: 10px;
  border-radius: 8px;
  transition: all 0.3s ease-in-out;
}

.btn-warning {
  background-color: #ffca28;
  border: none;
  color: #000;
}

.btn-warning:hover {
  background-color: #f5b400;
}

.btn-danger {
  background-color: #f44336;
  border: none;
}

.btn-danger:hover {
  background-color: #d32f2f;
}

.btn-info {
  background-color: #2196f3;
  border: none;
}

.btn-info:hover {
  background-color: #0d8bf2;
}

.btn-success {
  background-color: #4caf50;
  border: none;
}

.btn-success:hover {
  background-color: #3c9e40;
}

/* üìù Example Box */
pre {
  background-color: #2d2d2d;
  color: #d4d4d4;
  padding: 12px;
  border-radius: 6px;
  overflow-x: auto;
  font-size: 14px;
  font-family: 'Courier New', Courier, monospace;
  border-left: 5px solid #4caf50;
}

/* make this dropdown smaller and better  */
.editor-header{
  /* make it small */
  padding: 5px;
}

/* üñ•Ô∏è Code Editor */
textarea#code-editor {
  background-color: #1e1e1e;
  color: #d4d4d4;
  border: 1px solid #444;
  font-family: 'Courier New', Courier, monospace;
  font-size: 14px;
  height: 300px;
  resize: vertical;
  padding: 10px;
  border-radius: 6px;
}

/* üîò Select Dropdown */
select.form-control {
  background-color: #2d2d2d;
  color: #d4d4d4;
  border: 1px solid #444;
  border-radius: 6px;
}

select.form-control:focus {
  border-color: #2196f3;
  box-shadow: 0 0 5px rgba(33, 150, 243, 0.5);
}

/* üì± Responsive Design */
@media (max-width: 768px) {
  .row {
    flex-direction: column;
  }
  .col-md-5, .col-md-7 {
    width: 100%;
  }
}

  </style>
</head>
<body id="problem-page">
  <div class="container-fluid">
    <div class="row">
      <!-- Left Side: Problem Details -->
      <div class="col-lg-5 col-md-6 p-4 problem-section">
        <h3 class="problem-title"><%= problem.number %>.&nbsp;<%= problem.title %>
          <span class="badge tag <%= problem.tags === 'Easy' ? 'bg-success' : problem.tags === 'Medium' ? 'bg-warning' : 'bg-danger' %>">
            <%= problem.tags %>
          </span>
        </h3>
        <p class="text-light"><%= problem.description %></p>

        <% if (problem.examples.length > 0) { %>
          <h5 class="text-primary">Examples:</h5>
          <% problem.examples.forEach(example => { %>
            <pre><strong>Input:</strong> <%= example.input %>
<strong>Output:</strong> <%= example.output %></pre>
          <% }) %>
        <% } %>

        <% if (problem.constraints.length > 0) { %>
          <h5 class="text-info">Constraints:</h5>
          <ul class="constraints-list">
            <% problem.constraints.forEach(constraint => { %>
              <li><%= constraint %></li>
            <% }) %>
          </ul>
        <% } %>

        <!-- Action Buttons -->
        <div class="d-flex mt-3">
          <% if(user.isAdmin){ %>
            <a href="/problems/<%= problem._id %>/edit" class="btn btn-warning me-2">
              <i class="fa-solid fa-edit"></i>
            </a>
            <form action="/problems/<%= problem._id %>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this problem?');">
                <i class="fa-solid fa-trash"></i>
              </button>
            </form>
          <% } %>
          <a href="/comments/<%= problem._id %>/discuss" class="btn btn-info ms-2">
            <i class="fa-solid fa-comments"></i> Discuss
          </a>
          <form id="like-form" action="/problems/<%= problem._id %>/like" method="POST">
            <button type="submit" id="like-button" class="btn <%= user.likedProblems.includes(problem._id) ? 'btn-success' : 'btn-outline-info' %>">
              <i class="fa-solid fa-thumbs-up"></i>
              <span id="like-count"><%= problem.likes %></span>
            </button>
          </form>
        </div>
      </div>

      <!-- Right Side: Code Editor -->
      <div class="col-lg-7 col-md-6 p-4 code-section">
        <div class="editor-header">
          <label class="text-light">Select Language:</label>
          <select id="language" name="language" class="form-select form-select-sm w-auto d-inline-block">
            <option value="python3">Python</option>
            <option value="java">Java</option>
            <option value="javascript">JavaScript</option>
            <option value="cpp">C++</option>
            <option value="c">C</option>
          </select>
        </div>

        <form action="/problems/<%= problem._id %>/submit" method="POST">
          <textarea id="code-editor" name="code" class="form-control code-area" spellcheck="false"></textarea>
          <button type="submit" class="btn btn-success mt-3 w-100">
            <i class="fa-solid fa-play"></i> Run Code
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Store problem data for JS -->
  <div id="problem-data" data-problem-id="<%= problem._id %>"></div>
  <div id="templates" data-templates='<%= JSON.stringify(problem.templates) %>'></div>

  <script src="/js/script.js"></script>
</body>
</html>
