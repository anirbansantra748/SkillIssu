
<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= problem.title %> Discussion</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        /* Global Styles */
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Inter', sans-serif;
        }
        .container {
            max-width: 750px;
            margin-top: 30px;
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(255, 255, 255, 0.08);
        }
        h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
            font-weight: 600;
        }
        textarea, input, select {
            background-color: #2b2b2b;
            color: #d4d4d4;
            border: 1px solid #444;
            border-radius: 6px;
            padding: 10px;
            font-size: 14px;
        }
        textarea:focus, input:focus, select:focus {
            border-color: #2196f3;
            box-shadow: 0 0 5px rgba(33, 150, 243, 0.3);
        }
        .btn {
            margin-top: 8px;
            border-radius: 6px;
            font-size: 14px;
        }
        .btn-primary {
            background: linear-gradient(45deg, #2196f3, #0d8bf2);
            border: none;
            transition: 0.3s;
        }
        .btn-primary:hover {
            background: linear-gradient(45deg, #0d8bf2, #2196f3);
        }
        .comment-card {
            background-color: #242424;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 12px;
            border-left: 4px solid #2196f3;
            position: relative;
            transition: 0.3s;
        }
        .comment-card:hover {
            transform: scale(1.02);
        }
        .comment-user {
            font-weight: 600;
            color: #ffffff;
            font-size: 14px;
        }
        .comment-time {
            font-size: 12px;
            color: #bbb;
        }
        pre {
            background: #292929;
            color: #ddd;
            padding: 12px;
            border-radius: 6px;
            font-size: 14px;
            overflow-x: auto;
            border-left: 4px solid #2196f3;
        }
        .comment-actions a {
            color: #bbb;
            font-size: 14px;
            margin-left: 8px;
            transition: 0.2s;
        }
        .comment-actions a:hover {
            color: #ffffff;
        }
        .form-section {
            background: #181818;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2><i class="fa-solid fa-comments"></i> <%= problem.title %> Discussion</h2>

        <!-- Search & Filter Section -->
        <div class="form-section">
            <form method="GET" action="/comments/<%= problem._id %>/discuss">
                <div class="row">
                    <div class="col-md-4">
                        <select name="language" class="form-control">
                            <option value="">All Languages</option>
                            <option value="python3">Python</option>
                            <option value="java">Java</option>
                            <option value="javascript">JavaScript</option>
                            <option value="cpp">C++</option>
                            <option value="c">C</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <input type="text" name="search" class="form-control" placeholder="Search comments...">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fa-solid fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Post a Comment -->
        <div class="form-section">
            <form action="/comments/<%= problem._id %>/comments" method="POST">
                <textarea name="description" class="form-control" rows="3" placeholder="Write your comment..."></textarea>
                <textarea name="code" class="form-control mt-2" rows="4" placeholder="Optional: Paste code..."></textarea>
                <select name="language" class="form-control mt-2">
                    <option value="python3">Python</option>
                    <option value="java">Java</option>
                    <option value="javascript">JavaScript</option>
                    <option value="cpp">C++</option>
                    <option value="c">C</option>
                </select>
                <button type="submit" class="btn btn-primary w-100 mt-2">
                    <i class="fa-solid fa-paper-plane"></i> Post
                </button>
            </form>
        </div>

        <!-- Comments List -->
        <% if (problem.comments && problem.comments.length > 0) { %>
            <% problem.comments.forEach(comment => { %>
                <div class="comment-card">
                    <div>
                        <span class="comment-user">
                            <i class="fa-solid fa-user"></i> <%= comment.userId.username %>
                        </span>
                        <span class="comment-time"> â€¢ <%= comment.createdAt.toLocaleDateString() %></span>
                    </div>
                    <% if (comment.description) { %>
                        <p class="mt-2"><%= comment.description %></p>
                    <% } %>
                    <% if (comment.code) { %>
                        <pre><code><%= comment.code %></code></pre>
                    <% } %>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-center">No comments yet. Be the first to share your thoughts!</p>
        <% } %>
    </div>
</body>
</html>
