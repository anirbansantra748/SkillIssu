<% layout("/layouts/boilerplate") %>

<body class="d-flex align-items-center justify-content-center" style="min-height: 100vh; background: #121212;">
    <div class="container p-4 rounded"
        style="max-width: 600px; background: #1c1c1e; box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.1);">

        <h2 class="text-center mb-4 fw-bold" style="color: #f8f9fa;">✏️ Edit Contest</h2>

        <form action="/contests/<%= contest._id %>?_method=PUT" method="POST" class="p-3">
            <div class="mb-3">
                <label for="title" class="form-label fw-semibold" style="color: #f8f9fa;">📌 Contest Title</label>
                <input type="text" class="form-control bg-dark text-light border-0 p-2" id="title" name="title"
                    value="<%= contest.title %>" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label fw-semibold" style="color: #f8f9fa;">📝 Description</label>
                <textarea class="form-control bg-dark text-light border-0 p-2" id="description" name="description"
                    rows="3" required><%= contest.description %></textarea>
            </div>

            <div class="mb-3">
                <label for="problems" class="form-label fw-semibold" style="color: #f8f9fa;">💡 Problems (Comma-separated Numbers)</label>
                <input type="text" class="form-control bg-dark text-light border-0 p-2" id="problems" name="problems"
                    placeholder="Enter Problem Numbers" value="<%= problemNumbers %>" required>
            </div>

            <button type="submit" class="btn btn-outline-success w-100 fw-bold py-2">
                ✅ Update Contest
            </button>
        </form>
    </div>
</body>
